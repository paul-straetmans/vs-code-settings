{
    "workbench.startupEditor": "newUntitledFile",
    "window.titleBarStyle": "custom",

    "editor.scrollbar.verticalScrollbarSize": 8,
    
    // Controls the font size in pixels.
    "editor.fontSize": 15,
  
    // Controls the font family.
    "editor.fontFamily": "IA Writer Duospace, Menlo, Monaco, 'Courier New', monospace",
    
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "workbench.colorTheme": "DuoTone Dark Sea",
    // "workbench.colorTheme": "DuoTone Dark Sky",
    "workbench.colorCustomizations": {
        "activityBar.background": "#161d24",
        // "activityBar.background": "#1D262F",
        "sideBar.background": "#192129",

        "editorGroupHeader.tabsBackground": "#192129",
        "tab.activeBackground": "#192129",
        "tab.inactiveBackground": "#192129",
        "tab.activeBorder": "#34FEBB",
        
        "titleBar.inactiveBackground": "#13191f",
        "titleBar.activeBackground": "#13191f",

        "statusBar.background" : "#161d24",
        "statusBar.foreground": "#4b4b4b"
    }
}